@inject AccessService AccessService
@inject NavigationManager NavigationManager

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title text-center">Welcome to Our Wedding</h3>
                </div>
                @* <h3 class="card-title text-center mb-4">Welcome to Our Wedding</h3> *@

                <div class="card-body">
                    <div class="mb-3">
                        <label class="form-label">Access Code</label>
                        <input type="password"
                               class="form-control"
                               @bind-value="accessCode"
                               @bind-value:event="oninput"
                               @onkeydown="@OnKeyDown"/>
                    </div>

                    @if (showError)
                    {
                        <div class="alert alert-danger">
                            Invalid access code. Please try again.
                        </div>
                    }

                    <div class="text-center">
                        <button class="btn btn-primary  w-25" @onclick="ProcessLogin">
                            Login
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private string accessCode = "";
    private bool showError;

    private async Task OnKeyDown(KeyboardEventArgs e)
    {
        if (e.Key == "Enter")
        {
            await ProcessLogin();
        }
    }

    private async Task ProcessLogin()
    {
        showError = !AccessService.TryLoginWithCode(accessCode);
        if (!showError)
        {
            accessCode = "";
        }

        await InvokeAsync(StateHasChanged);
    }
}