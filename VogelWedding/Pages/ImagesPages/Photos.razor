@page "/bilder"

@using VogelWedding.Services
@using Microsoft.AspNetCore.Components.Forms
@using MudBlazor
@using System.IO
@using VogelWedding.Interfaces
@using VogelWedding.Modals
@using VogelWedding.ViewModels

@inject ISupabasePhotosService SupabasePhotosService
@inject AccessService AccessService
@inject ISnackbar Snackbar
@inject IBlazorCurrentDeviceService CurrentDevice
@inject PhotosViewModel ViewModel

<div class="page-wrapper">
    <Background/>

    <!-- Upload Section -->
    <div class="card page-container">
        <div
            class="@(ViewModel.IsMobile ? "page-card-frosted text-center" : "card-body page-card-frosted text-center")">
            <div class="card">
                <div class="card-body">
                    <h1 class="card-title mb-4">Fotos</h1>

                    <div class="mb-3">
                        <p>Lade hier deine Schnappschüsse hoch!</p>
                        <!-- Custom styled file upload -->
                        <div class="d-grid gap-2 col-md-6 mx-auto">
                            <label class="btn btn-primary btn-lg">
                                <span class="bi bi-cloud-upload-fill me-2"></span>
                                Fotos auswählen
                                <!-- InputFile is hidden but triggered by the label -->
                                <InputFile OnChange="ViewModel.OnFilesSelected" multiple hidden accept="image/*"/>
                            </label>
                        </div>
                    </div>

                    @if (ViewModel.IsUploading)
                    {
                        <div class="progress mt-3" style="height: 20px;">
                            <div class="progress-bar progress-bar-animated progress-bar-primary"
                                 role="progressbar"
                                 style="width: @(ViewModel.CalculateProgress())%">
                                @* Uploading... @(_uploadedCount) / @(_totalToUpload) *@
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="card page-container mt-2">
        <div class="@(ViewModel.IsMobile ? "page-card-frosted" : "card-body page-card-frosted")">
            <div class="card">
                <div class="card-body">
                    <!-- Gallery Section -->
                    @if (ViewModel.IsLoadingImages)
                    {
                        <div class="d-flex justify-content-center my-5">
                            <div class="spinner-border text-light" role="status">
                                <span class="visually-hidden">Loading...</span>
                            </div>
                        </div>
                    }
                    else if (ViewModel.ImageUrls.Any())
                    {
                        <div class="row g-3">
                                @foreach (var url in ViewModel.ImageUrls)
                                {
                                    <div class="col-6 col-md-4 col-lg-3">
                                        <div class="card h-100 shadow-sm border-0" @onclick="() => ViewModel.OpenFullscreen(url)" style="cursor: pointer;">
                                            <div class="ratio ratio-1x1">
                                                <img src="@url" class="card-img-top object-fit-cover rounded"
                                                     alt="Wedding photo"
                                                     style="width:100%; height:100%;" loading="lazy"/>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>

                            <div class="text-center mt-4">
                            <p class="text-muted small">
                                Zeige @ViewModel.ImageUrls.Count Bilder
                            </p>
                            
                            @if (ViewModel.HasMoreImages)
                            {
                                <div class="d-flex justify-content-center mt-4">
                                    <button class="btn btn-outline-primary"
                                            @onclick="ViewModel.LoadMoreImages"
                                            disabled="@ViewModel.IsLoadingMore">
                                        @if (ViewModel.IsLoadingMore)
                                        {
                                            <span class="spinner-border spinner-border-sm me-2"></span>
                                        }
                                        Mehr Bilder laden
                                    </button>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-secondary text-center mt-4" role="alert">
                            Noch keine Fotos vorhanden.
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Preview Modal (Bootstrap) -->
@if (ViewModel.ShowPreviewModal)
{
    <PhotoUploadPreviewModal FilesToUpload="ViewModel.FilesToUpload"
                             PreviewUrls="ViewModel.PreviewUrls"
                             IsLoading="ViewModel.IsPreviewLoading"
                             IsUploading="ViewModel.IsUploading"
                             OnClose="ViewModel.ClosePreviewModal"
                             OnConfirm="ViewModel.ConfirmUpload"
                             OnRemoveFile="ViewModel.RemoveFileFromSelection"/>
}

<!-- Fullscreen Modal for Image -->
@if (ViewModel.ShowFullscreenModal)
{
    <PhotoFullscreenModal ImageUrl="@ViewModel.SelectedFullsizeUrl"
                          OnClose="ViewModel.CloseFullscreen"/>
}

@code {
    protected override async Task OnInitializedAsync()
    {
        ViewModel.OnStateChanged += StateHasChanged;
        await ViewModel.InitializeAsync();
    }

    // It's good practice to unsubscribe when the component is disposed
    public void Dispose()
    {
        ViewModel.OnStateChanged -= StateHasChanged;
    }
}